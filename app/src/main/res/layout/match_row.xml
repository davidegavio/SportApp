<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Match"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/intro_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/match"
        android:text="Match day:"
        android:textColor="@color/primaryTextColor"/>

    <TextView
        android:id="@+id/match_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/intro_day"
        android:layout_above="@+id/intro_start" />

    <TextView
        android:id="@+id/intro_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_day"
        android:text="Start time: "
        android:textColor="@color/primaryTextColor"/>

    <TextView
        android:id="@+id/match_start_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/match_day"
        android:layout_toEndOf="@+id/intro_day" />


</RelativeLayout>