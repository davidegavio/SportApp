<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/grey_image"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:background="@color/primaryColor"
        android:contentDescription="@string/app_name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/home_result_dialog" />

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grey_image"
        android:text="Home:"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/home_result_dialog"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:hint="Result"
        android:layout_below="@+id/grey_image"
        android:layout_alignBottom="@+id/home_title"
        android:layout_toEndOf="@+id/home_title"
        />

    <TextView
        android:id="@+id/away_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_title"
        android:layout_toStartOf="@+id/away_result_dialog"
        android:text="Away:"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/away_result_dialog"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:layout_below="@+id/home_result_dialog"
        android:layout_alignBottom="@+id/away_title"
        android:layout_alignStart="@+id/home_result_dialog"
        android:layout_alignEnd="@+id/home_result_dialog" />

</RelativeLayout>